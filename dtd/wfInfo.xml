<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE WorkflowManager SYSTEM "wfInfo.dtd" >

<WorkflowManager>

	<workflow name="ArticleProduction">
		<action id="ArticleProduction_Writing" name="Writing" role="Journalist">
			<simple nextActions="ArticleProduction_Checking"></simple>
		</action>
		<action id="ArticleProduction_Checking" name="Checking" role="Editor">
			<simple nextActions="ArticleProduction_Revising ArticleProduction_Publication"></simple>
		</action>
		<action id="ArticleProduction_Revising" name="Revising" role="Journalist">
			<simple nextActions="ArticleProduction_Checking"></simple>
		</action>
		<action id="ArticleProduction_Publication" name="Publication" role="Editor">
			<simple></simple>
		</action>
	</workflow>
	
	<workflow name="SaleManagement">
		<action id="SaleManagement_AcceptOrder" name="AcceptOrder" role="Salesman">
			<simple nextActions="SaleManagement_NormalSale SaleManagement_PrepaidSale"></simple>
		</action>
		<action id="SaleManagement_NormalSale" name="NormalSale" role="SalesManager">
			<process nextProcess="NormalSale"></process>
		</action>
		<action id="SaleManagement_PrepaidSale" name="PrepaidSale" role="SalesManager">
			<process nextProcess="PrepaidSale"></process>
		</action>
	</workflow>
	
	<workflow name="NormalSale">
		<action id="NormalSale_GoodsDelivery" name="GoodsDelivery" role="Warehouseman">
			<simple></simple>
		</action>
		<action id="NormalSale_InvoiceIssuance" name="InvoiceIssuance" role="Accountingman">
			<simple nextActions="NormalSale_PaymentRec"></simple>
		</action>
		<action id="NormalSale_PaymentRec" name="PaymentRec" role="Accountingman">
			<simple></simple>
		</action>
	</workflow>
	
	<workflow name="PrepaidSale">
		<action id="PrepaidSale_InvoiceIssuance" name="InvoiceIssuance" role="Accountingman">
			<simple nextActions="PrepaidSale_PaymentRec"></simple>
		</action>
		<action id="PrepaidSale_PaymentRec" name="PaymentRec" role="Accountingman">
			<simple nextActions="PrepaidSale_GoodsDelivery"></simple>
		</action>
		<action id="PrepaidSale_GoodsDelivery" name="GoodsDelivery" role="Warehouseman">
			<simple></simple>
		</action>
	</workflow>
	
</WorkflowManager>